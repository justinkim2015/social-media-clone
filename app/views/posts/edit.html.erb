<%= turbo_frame_tag @post do %>

  <%= form_with model: @post do |f| %>
    <%= f.text_area :body, placeholder: "What's going on?", class: 'textarea is-hovered has-background-white-bis'%>
    <%= f.submit "Update", class: 'button is-link is-rounded is-small' %>
  <% end %>

<% end %>

<%= link_to "Return to Post", root_path %>

