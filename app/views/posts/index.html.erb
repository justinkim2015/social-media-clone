<%= render "shared/navbar", notifs: @notifs %>
<%= render "shared/flash" %>
<h1>Title</h1>

<%= form_with model: @post, method: "post" do |f| %>
  <%= f.text_field :body %>
  <%= f.submit %>
<% end %>

<ul>
  <% @posts.each do |post| %>
    <div class="box">
      <%= link_to post.user.email, user_path(post.user.id) %>
      <br>
      <%= post.body %>
      <br>
      <%= post.pretty_time %>
    </div>
  <% end %>
</ul>