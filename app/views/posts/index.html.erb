<%= render "shared/navbar", {notifs: @notifs} %>
<%= render "shared/flash" %>

<div class="container">  
  <%= render "shared/post_form", {model: @new_post} %>
  
  <% @posts.each do |post| %>
    <%= render "shared/full_post", {post: post} %>
  <% end %>
</div>


<div class="box">
  <% @posts.each do |post| %>
    <div class="box">
      <%= turbo_frame_tag post do %>
        <li><%= post.body %></li>
        <br>
        <%= link_to "Edit Post", edit_post_path(post.id) %>
      <% end %>
    </div>
  <% end %>
</div>