<%= render "shared/navbar", {notifs: @notifs} %>
<%= render "shared/flash" %>

<div class="container">  
  <%= render "shared/post_form", {model: @new_post} %>
  
  <% @posts.each do |post| %>
    <% if current_user.friends.include?(post.user) || post.user == current_user %>
      <%= render "shared/full_post", {post: post, comment: @comment} %>
    <% end %>
  <% end %>
</div>

<div data-controller="toggle">
  <button data-action="toggle#toggle" data-toggle-target="source">Hello</button>
</div>