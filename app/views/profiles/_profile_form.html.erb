<%= form_with model: @profile do |f| %>
  <div class="container is-flex is-flex-direction-column">
    <%= f.label :bio, 'About me:', class: 'label' %><br>
    <%= f.text_area :bio, autocomplete: "bio", class: "textarea my-2 has-background-light" %>

    <%= f.label :profile_pic, "Profile Picture:", class: 'label my-2 has-background-light' %>
    <%= f.file_field :profile_pic %>

    <%= f.label :gender, 'Gender:', class: 'label' %><br>
    <%= f.select :gender, ['Male', 'Female', 'Nonbinary'], options={}, class: "select" %>

    <%= f.label :relationship_status, 'Relationship Status:', class: 'label' %><br>
    <%= f.select :relationship_status, ['Single', 'Taken', 'Married', 'Prefer not to say'], options={}, class: "select" %>

    <%= f.label :location, 'Location:', class: 'label' %><br>
    <%= f.text_area :location, rows: 1, autocomplete: "location", class: "textarea my-2 has-background-light" %>


    <%= f.label :occupation, 'Occupation:', class: 'label' %><br>
    <%= f.text_area :occupation, rows: 1, autocomplete: "occupation", class: "textarea my-2 has-background-light" %>

    <%= f.label :education, 'Education:', class: 'label' %><br>
    <%= f.text_area :education, rows: 1, autocomplete: "work", class: "textarea my-2 has-background-light" %>

    <%= f.submit "Submit", class: 'button my-2 has-background-light' %>
  </div>
<% end %>
