<% unless post.liked_by?(current_user) %>
    <div class="container level">
      <%= link_to image_tag('like.png', class: 'image is-16x16'),
                  likes_path({ like: {user_id: current_user.id, post_id: post.id}}),
                  data: { turbo_method: :post, turbo_frame: 'likes' },
                  class: 'has-text-primary'
                  %>
    </div>
<% else %>
    <%= link_to image_tag('dislike.png', class: 'image is-16x16'), 
                like_path({id: 0, like: {user_id: current_user.id, post_id: post.id} }),
                data: { turbo_method: :delete, turbo_frame: 'likes' },
                class: 'has-text-danger'
                %>
<% end %>
