<% unless post.liked_by?(current_user) %>
  <%= button_to "Like", 
              likes_path,
              method: :post,
              params: { like: {user_id: current_user.id, post_id: post.id}},
              class: "button is-small is-rounded is-primary" %>
<% else %>
  <%= button_to "Unlike", 
              like_path(0),
              method: :delete,
              params: { like: {user_id: current_user.id, post_id: post.id},},
              class: "button is-small is-rounded is-danger" %>
<% end %>
