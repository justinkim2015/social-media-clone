<div class="navbar">
  <div class="navbar-brand">
    <div class="navbar-item">
      <h1 class="title">Odinbook</h1>
    </div>

    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div class="navbar-menu">
    <div class="navbar-start">
      <div class="navbar-link"><%= link_to "Home", root_path %></div>
      <div class="navbar-link"><%= link_to "Profile", user_path(current_user.id) %></div>
      <div class="navbar-link"><%= link_to "Add Friends", users_path %></div>
      <div class="navbar-link"><%= link_to "Edit Profile", edit_user_registration_path %></div>
    </div>

    <div class="navbar-end">
      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          <p>Notifications</p>
        </a>

        <div class="navbar-dropdown">

          <% if defined?(notifs) %>
            <% notifs.each do |notif| %>
              <a class="navbar-item">
                <p><%= notif.requester.email %></p>

                <%= button_to "Yes",
                              friendships_path, 
                              method: :post, 
                              params: { friendship: {friend_a_id: current_user.id, friend_b_id: notif.requester.id} } %>
                
                <%= button_to "No",
                              friend_request_path(0), 
                              method: :delete, 
                              params: {requester_id: notif.requester.id , reciever_id: current_user.id} %>

              </a>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="navbar-item"><%= button_to "Signout", destroy_user_session_path, method: :delete %></div>
    </div>
  </div>
</div>